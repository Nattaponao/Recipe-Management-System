generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

model Recipe {
  id           Int      @id @default(autoincrement())
  name         String
  instructions String
  createdAt    DateTime @default(now())
}

model User {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  name            String?
  password_hashed String?
  posts           Post[]
}
